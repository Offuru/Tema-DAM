<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sensor_Logger.Controls.Views.SensorsScrollbar">

    <ScrollView Orientation="Horizontal">
        <Grid ColumnDefinitions="*,*,*,*,*">

            <Button
                    Command="{Binding AccelerometerCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                    CornerRadius="10"
                    BorderColor="#A0A0A0"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    MinimumHeightRequest="100"
                    MinimumWidthRequest="78.5"
                    MaximumWidthRequest="78.5"
                    BorderWidth="1"
                    Grid.Column="0">
 
            </Button>

            <Button
                    Command="{Binding GpsCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                    CornerRadius="10"
                    BorderColor="#A0A0A0"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    MinimumWidthRequest="78.5"
                    MaximumWidthRequest="78.5"
                    BorderWidth="1"
                    Grid.Column="1">

            </Button>

            <Button
                    Command="{Binding BarometerCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                    CornerRadius="10"
                    BorderColor="#A0A0A0"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    MinimumWidthRequest="78.5"
                    MaximumWidthRequest="78.5"
                    BorderWidth="1"
                    Grid.Column="2">

            </Button>

            <Button
                    Command="{Binding CompassCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                    CornerRadius="10"
                    BorderColor="#A0A0A0"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    MinimumWidthRequest="78.5"
                    MaximumWidthRequest="78.5"
                    BorderWidth="1"
                    Grid.Column="3">

            </Button>

            <Button
                    Command="{Binding GyroscopeCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                    CornerRadius="10"
                    BorderColor="#A0A0A0"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    MinimumWidthRequest="78.5"
                    MaximumWidthRequest="78.5"
                    BorderWidth="1"
                    Grid.Column="4">

            </Button>
        </Grid>
    </ScrollView>

</ContentView>
