<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sensor_Logger.Controls.Views.SensorsScrollbar">


    <ScrollView Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <StackLayout Orientation="Horizontal" Spacing="0" Padding="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Button Text="Accelerometer" Command="{Binding AccelerometerCommand}" VerticalOptions="FillAndExpand" CornerRadius="0" BorderColor="Gray" BorderWidth="1" />
            <BoxView WidthRequest="1" Color="Gray" />

            <Button Text="GPS" Command="{Binding GpsCommand}" VerticalOptions="FillAndExpand" CornerRadius="0" BorderColor="Gray" BorderWidth="1" />
            <BoxView WidthRequest="1" Color="Gray" />

            <Button Text="Barometer" Command="{Binding BarometerCommand}" VerticalOptions="FillAndExpand" CornerRadius="0" BorderColor="Gray" BorderWidth="1" />
            <BoxView WidthRequest="1" Color="Gray" />

            <Button Text="Compass" Command="{Binding CompassCommand}" VerticalOptions="FillAndExpand" CornerRadius="0" BorderColor="Gray" BorderWidth="1" />
            <BoxView WidthRequest="1" Color="Gray" />

            <Button Text="Gyroscope" Command="{Binding GyroscopeCommand}" VerticalOptions="FillAndExpand" CornerRadius="0" BorderColor="Gray" BorderWidth="1" />
        </StackLayout>
    </ScrollView>
</ContentView>
