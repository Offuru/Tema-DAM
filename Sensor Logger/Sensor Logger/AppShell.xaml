<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sensor_Logger.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sensor_Logger"
    xmlns:pages="clr-namespace:Sensor_Logger.Views"
    xmlns:viewmodels="clr-namespace:Sensor_Logger.ViewModels"
    Shell.FlyoutBehavior="Disabled"
    Title="Sensor_Logger">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="home"/>
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="login"/>

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="register"/>

</Shell>
